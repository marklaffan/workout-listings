<!DOCTYPE html>
<html>
    <head>
        <title>Workout Listings Ireland</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="ui fixed inverted menu">
            <div class="ui container">
                <div class="header item"><a href="/workouts">Workout Listings</a></div>
                <a href="/" class="item">Link</a>
                <div class="right menu">
                    <% if(!currentUser) { %>
                        <a class="item" href="/login">Login</a>
                        <a class="item" href="/register">Sign Up</a>
                    <% } else { %>
                        <a class="item" href="#">Hi <%= currentUser.username %></a>
                        <a class="item" href="/logout">Logout</a>
                    <% } %>
                </div>
            </div>
        
        </div>
                        <!--REMOVE THIS HARDCODED STYLING-->
            <div class="ui container" style="margin-top: 4em;">
            <% if(error && error.length > 0) { %>
            <div class="ui negative message">
              <!--<i class="close icon"></i>-->
              <div class="header">
                <%= error %>
              </div>
            </div>
            <% } %>
            <% if(success && success.length > 0) { %>
            <div class="ui success message">
              <!--<i class="close icon"></i>-->
              <div class="header">
                <%= success %>
              </div>
            </div>
            <% } %>